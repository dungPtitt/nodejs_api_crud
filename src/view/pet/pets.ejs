<!DOCTYPE html>
<html>
  <head>
    <title>home page</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <script>
      function checker(e) {
        if (!window.confirm("Are you sure delete pet!")) {
          e.preventDefault();
        } else {
          return;
        }
      }
    </script>
  </head>
  <body>
    <div>
      <h1 style="text-align: center">Table Pet</h1>
      <table id="customers" class="table">
        <thead class="table-success">
          <tr>
            <th>STT</th>
            <th>Name</th>
            <th>Date of birth</th>
            <th>Race</th>
            <th>Vaccinated</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% for(var i=0; i < data.length; i++) { %>
          <tr>
            <td><%= i+1 %></td>
            <td><%= data[i].name %></td>
            <td><%= data[i].dob %></td>
            <td><%= data[i].race %></td>
            <td>
              <input id="vaccinated" disabled value="<%=data[i].vaccinated%>"
              type="checkbox" name="vaccinated" <%= data[i].vaccinated==1 ?
              "checked" : "" %> />
            </td>
            <td>
              <a
                href="/edit-add-pet?id=<%= data[i].id %>"
                type="button"
                class="btn btn-warning"
                >Edit</a
              >
              <a
                href="/delete-pet?id=<%= data[i].id %>"
                type="button"
                class="btn btn-danger"
                onclick="checker(event)"
                >Delete</a
              >
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
      <div style="text-align: center">
        <a href="/edit-add-pet?id=-1" type="button" class="btn btn-success"
          >Add new pet</a
        >
      </div>
    </div>
  </body>
</html>
